<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_sp"
    tools:context=".views.SanPham"
    android:backgroundTint="#F8F8A0"
    android:layout_weight="10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="#F8F8A0"
        android:layout_weight="0.8">
        <EditText

            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/edtexttim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm"
            android:textSize="14sp"
            android:focusableInTouchMode="false"
            android:textColor="@color/black"
            android:background="@drawable/botext"
            android:drawableRight="@drawable/iconseach"
            android:layout_alignParentTop="true"/>
    </LinearLayout>

    <TextView
        android:paddingLeft="10dp"
        android:layout_weight="0.1"
        android:background="#F8F8A0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=">Sản Phẩm"
        android:textSize="17sp"/>
    <LinearLayout
        android:layout_weight="0.6"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="horizontal"
        android:background="#F8F8A0"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="Chó"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:onClick="onClick"
            android:background="@drawable/button_pressed"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="Mèo"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:onClick="onClick"
            android:background="@drawable/button_pressed"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="Chim"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:onClick="onClick"
            android:background="@drawable/button_pressed"
            tools:ignore="OnClick" />
        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="Cá"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:onClick="onClick"
            android:background="@drawable/button_pressed"
            tools:ignore="OnClick" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lvmonan"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        tools:listitem="@layout/layout_monan" />



</LinearLayout>
