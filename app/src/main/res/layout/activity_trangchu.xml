<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_rela"
    tools:context=".GioHang"
    android:layout_weight="10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="0.8"
        android:id="@+id/layout_header_home"
        android:layout_width="match_parent"
        android:layout_height="0px">

        <EditText
            android:id="@+id/edit_timkiem"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/boder_3"
            android:hint="Tìm kiếm" />

        <ImageButton
            android:id="@+id/btn_timkiem_home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="17dp"
            android:background="@color/white"
            android:src="@drawable/iconseach" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_GT_home"
        android:layout_weight="2.5"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:adjustViewBounds="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/anhqc01" />


    <RelativeLayout
        android:id="@+id/layout_center_home"
        android:layout_weight="6"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/btn_muapet_home"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/boder_1"
            android:drawableRight="@drawable/mp6"
            android:drawablePadding="5dp"
            android:text="Mua pet"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />


        <Button
            android:id="@+id/btb_phukien_home"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/btn_muapet_home"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_6"
            android:drawableRight="@drawable/phukienpng"
            android:drawablePadding="5dp"
            android:paddingRight="8dp"
            android:text="Phụ kiện"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_thucan_home"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/btb_phukien_home"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_1"
            android:drawableRight="@drawable/thucan"
            android:drawablePadding="5dp"
            android:text="Thức ăn"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_thuocthuy_home"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/btn_thucan_home"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_1"
            android:drawableRight="@drawable/thuocthuy"
            android:text="Thuốc thú y"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btn_sukien_home"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@id/btn_thuocthuy_home"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder_1"
            android:drawableRight="@drawable/sk"
            android:paddingRight="8dp"
            android:text="Sự kiện"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_weight="0.7"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/color_bar"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        app:menu="@menu/bottom_nav_menu" />


</LinearLayout>