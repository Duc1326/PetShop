<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_sp"
    tools:context=".views.ThucAn"
    android:background="#F8F8A0"
    android:layout_weight="10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="#F8F8A0"
        android:layout_weight="0.8">
        <EditText
            android:focusableInTouchMode="false"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/edtexttim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@drawable/botext"
            android:drawableRight="@drawable/iconseach"
            android:layout_alignParentTop="true"/>
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#F8F8A0"
        android:gravity="center"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imagebtn_seacherdog_tramhchu"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/seacher_dog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="70dp"
                android:text="Dog"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imagebtn_seachercat_trangchu"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/seacher_cat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="70dp"
                android:text="Cat"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imagebtn_seacher_bird_trangchu"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/seacher_bird" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="70dp"
                android:text="Bird"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imgagebtn_seacher_fish_trangchu"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:src="@drawable/seacher_fish" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="70dp"
                android:text="Fish"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>
    <ListView
        android:layout_weight="7.6"
        android:id="@+id/lvSanPham"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_above="@id/bottom_navigation"
        android:background="#F8F8A0">


    </ListView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_weight="0.8"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/color_bar"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        app:menu="@menu/bottom_nav_menu" />


</LinearLayout>
